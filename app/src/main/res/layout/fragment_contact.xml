<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    android:background="@color/all_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

    <EditText
        android:id="@+id/contact_et_search"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:singleLine="true"
        android:background="@drawable/search_bg"
        android:drawableLeft="@drawable/ic_search_grey600_24dp"
        android:hint="输入姓名或工号查询..." />

        <LinearLayout
            android:layout_below="@id/contact_et_search"
            android:visibility="gone"
            android:id="@+id/above_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/department_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/setup_bg_selector"
                >
                <com.moor.im.ui.view.RoundImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_addfriend_contact"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="组织架构"
                    android:textColor="@color/all_black"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/group_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/setup_bg_selector"
                >
                <com.moor.im.ui.view.RoundImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_addfriend_group"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="群组"
                    android:textColor="@color/all_black"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/discuss_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/setup_bg_selector"
                >
                <com.moor.im.ui.view.RoundImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_addfriend_discuss"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="讨论组"
                    android:textColor="@color/all_black"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </LinearLayout>



        <ListView
            android:layout_below="@id/above_id"
            android:id="@+id/contact_listview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="@null" />

        <TextView
            android:id="@+id/contact_textview_dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/login_btn_normal"
            android:textColor="#ffffffff"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="30.0dip"
            android:visibility="invisible" />

        <com.moor.im.ui.view.SideBar
            android:id="@+id/contact_sidebar"
            android:layout_width="30.0dip"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            />
</RelativeLayout>