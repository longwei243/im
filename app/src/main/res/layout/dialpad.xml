<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <ImageButton
	            android:id="@+id/button1"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_01"
	            android:tag="1" />
	
	        <ImageButton
	            android:id="@+id/button2"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_02"
	            android:tag="2" />
	
	        <ImageButton
	            android:id="@+id/button3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_03"
	            android:tag="3" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <ImageButton
	            android:id="@+id/button4"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_04"
	            android:tag="4" />
	
	        <ImageButton
	            android:id="@+id/button5"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_05"
	            android:tag="5" />
	
	        <ImageButton
	            android:id="@+id/button6"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_06"
	            android:tag="6" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <ImageButton
	            android:id="@+id/button7"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_07"
	            android:tag="7" />
	
	        <ImageButton
	            android:id="@+id/button8"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_08"
	            android:tag="8" />
	
	        <ImageButton
	            android:id="@+id/button9"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_09"
	            android:tag="9" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <ImageButton
	            android:id="@+id/buttonstar"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_xh_selecter"
	            android:tag="*" />
	
	        <ImageButton
	            android:id="@+id/button0"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_00"
	            android:tag="0" />
	
	        <ImageButton
	            android:id="@+id/buttonpound"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/dia_keyboard_jh_selecter"
	            android:tag="#" />
	    </LinearLayout>

	</LinearLayout>