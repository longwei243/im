<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/direct_seeding_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/calling_linear"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/direct_seeding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:text="修改讨论组名称"
            android:textSize="@dimen/size_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ordinary_call_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/calling_linear"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ordinary_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:text="添加讨论组成员"
            android:textSize="@dimen/size_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cancel_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/calling_linear"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:text="删除该讨论组"
            android:textSize="@dimen/size_18" />
    </LinearLayout>

</LinearLayout>