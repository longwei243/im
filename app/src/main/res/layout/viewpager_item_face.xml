<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/item_linear_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_9"
        android:layout_marginLeft="@dimen/margin_4"
        android:layout_marginRight="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_9"
        android:background="@drawable/item_viewpager" >

        <ImageView
            android:id="@+id/item_iv_face"
            android:layout_width="@dimen/margin_28"
            android:layout_height="@dimen/margin_28"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/margin_6"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_marginRight="@dimen/margin_6"
            android:layout_marginTop="@dimen/margin_6"
            android:scaleType="fitXY" />
    </LinearLayout>

</RelativeLayout>